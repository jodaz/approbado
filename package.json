{
  "name": "approbado-server",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "npm-run-all build server",
    "watch:dev": "nodemon",
    "start": "node ./dist/index.js",
    "server": "node ./dist/index.js",
    "clean": "rimraf dist",
    "build": "npm-run-all clean transpile",
    "transpile": "babel ./src --out-dir dist --copy-files",
    "db:migrate": "knex migrate:latest --knexfile src/config/knexfile --esm",
    "seed:run": "knex seed:run --knexfile src/config/knexfile --esm",
    "prod:run": "knex seed:run --knexfile src/config/knexfile --esm --specific=1prod.js",
    "db:rollback": "knex migrate:rollback --knexfile src/config/knexfile --esm",
    "test": "npm run build && mocha"
  },
  "dependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/plugin-transform-regenerator": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.4",
    "@babel/register": "^7.18.9",
    "@babel/runtime": "^7.19.4",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "email-templates": "^10.0.1",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.0",
    "is-empty": "^1.2.0",
    "knex": "^2.3.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.8.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "objection": "^3.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.8.0",
    "preview-email": "^3.0.7",
    "pug": "^3.0.2",
    "puppeteer-core": "^19.0.0",
    "regenerator-transform": "^0.15.0",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "rotating-file-stream": "^3.0.4",
    "socket.io": "^4.5.3",
    "twilio": "^3.82.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/transform-runtime"
      ]
    ]
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "mocha": "^10.1.0",
    "supertest": "^6.3.0"
  }
}
